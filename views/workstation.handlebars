        <button> <i class="fas fa-save"></i> Save</button> -->
    </div>

    <div class="track ui-block" id="track-one">
      <div class="title-bar">
        <h4>One</h4>
        <i class="fas fa-trash-alt hide" id="destroyBtn1"></i>
        <div class="loading hide"><span>.</span><span>.</span><span>.</span></div>
        {{!-- <button id="destroyBtn1">CLEAR</button> --}}
      </div>
      <div class="track-controls">
        <i class="fas fa-play-circle play trk-ctl-btn disable" id="playBtn1" data-id="{{this.id}}">
          <audio id="audio1" class="play-audio" src="/{{track1}}">
            Here
          </audio>
        </i>
        <div class="volume-controls">
          <input id="volumeSlider1" class="input-range disable" orient="vertical" type="range" step="0.01" min="0"
            max="1" />
          <canvas id="myCanvas1" class="audio-meter"></canvas>
        </div>
        <label class="switch">
          <input class="check" type="checkbox" value="false" data-track="1" />
          <span class="slider round"></span>
        </label>
      </div>
    </div>

